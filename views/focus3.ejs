<style>
    .top-image {
        position: relative;
        width: 100%;
        overflow: hidden;
        height: 500px;
    }
    .top-img {
        position: absolute;
        top: 40%;
        left: 50%;
        width: 80%;
        height: auto;
        transform: translate(-50%, -50%);
    }
    .top-content {
        max-width: 1200px; /* Adjust max-width as needed */
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff; /* Example background color */
        color: #2f4507; /* Example text color */
    }

    .top-content h1, .top-content h2, .top-content h3 {
        color: #2f4507;
    }

    .top-content h1 {
        margin-bottom: 30px; /* Increase space below h1 */
    }

    .top-content h2 {
        margin-top: 30px; /* Increase space above h2 */
        margin-bottom: 20px; /* Adjust space below h2 if needed */
    }

    .top-content p, .top ul {
        margin-bottom: 20px;
        line-height: 1.6;
        font-size: 1rem;
    }

    .top-content ul {
        list-style-type: disc;
        padding-left: 20px;
    }

    /* Box Section */
    .boxes-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .box {
        flex: 1 1 calc(33.333% - 20px);
        margin: 10px;
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .box img {
        width: 100%;
        height: 300px; /* Set a fixed height for uniformity */
        object-fit: cover; /* Ensures the image covers the entire area while maintaining aspect ratio */
        border-radius: 10px;
    }

    .box h3 {
        color: #2f4507;
        margin: 15px 0;
    }

    .read-more-btn {
        background-color: orange;
        border: none;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: inline-block;
    }

    .read-more-btn:hover {
        background-color: blue;
    }

    .read-more-btn:active {
        background-color: blue;
    }
</style>

