<style>
    .top-image {
        position: relative;
        width: 100%;
        overflow: hidden;
        height: 450px;
    }

    .top-img {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 80%;
        height: auto;
        transform: translate(-50%, -50%);
    }

    .top-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        color: #2f4507;
    }

    .top-content h1, .top-content h2 {
        color: #2f4507;
    }

    .top-content h1 {
        margin-bottom: 30px;
        text-align: center;
    }

    .top-content h2 {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    /* Box styles */
    .box-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 40px;
    }

    .box {
        flex-basis: 30%;
        margin-bottom: 20px;
        text-align: center;
        background-color: #f5f5f5; /* Box color */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .box img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .box-heading {
        margin-top: 15px;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .box-button {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        background-color: orange;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .box-button:hover {
        background-color: blue;
    }

    /* Styles for the two side-by-side boxes */
    .side-by-side-boxes {
        display: flex;
        justify-content: space-between;
        gap: 20px; /* Added spacing between boxes */
    }

    .side-box {
        flex-basis: 48%; /* Make both boxes take up equal width */
        background-color: #f5f5f5;
        text-align: center;
        padding: 20px; /* Adjusted padding */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        box-sizing: border-box; /* Ensure padding doesn't affect the box size */
    }

    .side-box img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .box-heading {
        margin-top: 15px;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .box-button {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        background-color: orange;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .box-button:hover {
        background-color: blue;
    }
</style>

