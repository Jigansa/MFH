<!-- Custom CSS for the Opportunities page -->
<style>
    .opportunities-image {
        position: relative;
        width: 100%;
        overflow: hidden;
        height: 500px; /* Adjust the height as needed */
    }

    .opportunities-img {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        height: auto;
        transform: translate(-50%, -50%);
    }

    .opportunities-content {
        max-width: 1200px; /* Adjust max-width as needed */
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff; /* Example background color */
        color: #2f4507; /* Example text color */
    }

    .opportunities-content h1, .opportunities-content h2, .opportunities-content h3 {
        color: #2f4507;
    }

    .opportunities-content h1 {
        margin-bottom: 30px; /* Increase space below h1 */
    }

    .opportunities-content h2 {
        margin-top: 30px; /* Increase space above h2 */
        margin-bottom: 20px; /* Adjust space below h2 if needed */
    }

    .opportunities-content p {
        margin-bottom: 20px;
        line-height: 1.6;
        font-size: 1rem;
    }

    /* Custom styles for vacancy buttons */
    .vacancy-button {
        display: block;
        background-color: #166e8d;
        color: white;
        text-align: center;
        padding: 15px;
        border-radius: 5px;
        text-decoration: none;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

    .vacancy-button:hover {
        background-color: #105970;
    }

    .no-vacancies {
        text-align: center;
        color: #666;
        margin-bottom: 20px;
    }
</style>

<!-- Image Section -->
<div class="opportunities-image">
    <img src="10.jpg" alt="Opportunities Image" class="opportunities-img">
</div>

<!-- Content Section -->
<div class="opportunities-content">
    <h1>Opportunities</h1>

