<!-- JavaScript to bold text before colon -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Select all <p> tags in the vision-mission-content class
        const paragraphs = document.querySelectorAll(".vision-mission-content p");

        paragraphs.forEach(function(p) {
            const text = p.innerHTML;
            const index = text.indexOf(':'); // Find the first colon

            if (index !== -1) {
                // Bold the text before the colon
                const boldText = "<strong>" + text.substring(0, index) + "</strong>" + text.substring(index);
                p.innerHTML = boldText; // Update the paragraph's HTML
            }
        });
    });
</script>
