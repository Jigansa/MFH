<style>
    /* Container for the circular design */
    .circle-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0;
    }

    /* Outer Circle */
    .circle {
        position: relative;
        width: 500px;
        height: 500px;
        border-radius: 50%;
        background: conic-gradient(
            #5a5cc9 0% 12.5%, #7d77d9 12.5% 25%, 
            #a08ae9 25% 37.5%, #c29df9 37.5% 50%, 
            #e5b0ff 50% 62.5%, #c78ce8 62.5% 75%, 
            #a769d1 75% 87.5%, #8756bb 87.5% 100%
        );
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Center Circle for the title */
    .circle .center {
        position: absolute;
        width: 180px;
        height: 180px;
        background-color: #333;
        color: #fff;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 10px;
        font-weight: bold;
    }

    /* Styling the text for each segment */
    .segment {
        position: absolute;
        width: 50%;
        height: 50%;
        overflow: hidden;
        transform-origin: 100% 100%;
    }

    .segment span {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        font-weight: bold;
        padding: 10px;
    }

    /* Specific rotation and position for each segment */
    .segment1 { transform: rotate(0deg); }
    .segment1 span { transform: rotate(-45deg); }
    
    .segment2 { transform: rotate(45deg); }
    .segment2 span { transform: rotate(-90deg); }

    .segment3 { transform: rotate(90deg); }
    .segment3 span { transform: rotate(-135deg); }

    .segment4 { transform: rotate(135deg); }
    .segment4 span { transform: rotate(-180deg); }

    .segment5 { transform: rotate(180deg); }
    .segment5 span { transform: rotate(-225deg); }

    .segment6 { transform: rotate(225deg); }
    .segment6 span { transform: rotate(-270deg); }

    .segment7 { transform: rotate(270deg); }
    .segment7 span { transform: rotate(-315deg); }

    .segment8 { transform: rotate(315deg); }
    .segment8 span { transform: rotate(-360deg); }

</style>

<div class="circle-container">
    <div class="circle">
        <!-- Center text -->
        <div class="center">Our Engagement Principles</div>

        <!-- Each segment with content -->
        <div class="segment segment1"><span>Inclusivity and Equity</span></div>
        <div class="segment segment2"><span>Respect and Inclusion</span></div>
        <div class="segment segment3"><span>Empowerment and Ownership</span></div>
        <div class="segment segment4"><span>Collaboration and Partnership</span></div>
        <div class="segment segment5"><span>Reporting and Accountability</span></div>
        <div class="segment segment6"><span>Shared Goals</span></div>
        <div class="segment segment7"><span>Ethical Standards</span></div>
        <div class="segment segment8"><span>Respect for Rights</span></div>
    </div>
</div>

