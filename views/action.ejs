<%- include("background.ejs") %>

<style>
    .top-image {
        position: relative;
        width: 100%;
        overflow: hidden;
        height: 450px;
    }

    .top-img {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 80%;
        height: auto;
        transform: translate(-50%, -50%);
    }

    .top-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        color: #2f4507;
    }

    .top-content h1, .top-content h2 {
        color: #2f4507;
    }

    .top-content h1 {
        margin-bottom: 30px;
        text-align: center;
    }

    .top-content h2 {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    /* Box styles */
    .box-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px;
    }

    .box {
        flex: 1 1 calc(33% - 20px); /* Updated width with gap in mind */
        margin-bottom: 20px;
        text-align: center;
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .box img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
    }

    .box-heading {
        margin-top: 15px;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .box-button {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        background-color: orange;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .box-button:hover {
        background-color: blue;
    }

    /* Styles for the two side-by-side boxes */
    .side-by-side-boxes {
        display: flex;
        justify-content: space-between;
        gap: 20px;
    }

    .side-box {
        flex-basis: 30%; /* Adjust width for three equal blocks */
        background-color: #f5f5f5;
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        box-sizing: border-box;
    }

    .side-box img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
    }

    .no-img-box img {
        display: none;
    }

    .no-img-box .box-heading {
        margin-top: 20px;
        font-size: 1.1rem;
        font-weight: bold;
    }

</style>

